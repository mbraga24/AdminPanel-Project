<h1>Edit Courses</h1>

<%= form_with(model: @course) do |form| %>
<div class="form-row">
  <div class="form-group col-md-3">
    <label for="validationCustom01">Name</label>
      <%= form.text_field :name, class:"form-control", id: "validationCustom01", required: true %>
  </div>
  <div class="form-group col-md-3">
    <label for="validationCustom02">Code Name</label>
      <%= form.text_field :code_name, class:"form-control", id: "validationCustom02", required: true %>
  </div>
    <div class="form-group col-md-1">
      <label for="validationCustom03">Total Hours</label>
      <%= form.text_field :total_hours, class: "form-control", id: "validationCustom06", required: true %>
    </div>
  </div>
    <%= form.submit "Update", class: "btn btn-primary" %>
  <% end %>
  </div>  
