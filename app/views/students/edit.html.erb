<h1>Edit Students</h1>

<%= form_with(model: @student) do |form| %>
  <div class="form-row">
    <div class="form-group col-md-3">
      <label for="inputEmail1">Email</label>
        <%= form.text_field :email, class:"form-control", id: "inputEmail4", required: true %>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-3">
      <label for="validationCustom01">First Name</label>
        <%= form.text_field :first_name, class:"form-control", id: "validationCustom01", required: true %>
    </div>
    <div class="form-group col-md-3">
      <label for="validationCustom02">Last Name</label>
        <%= form.text_field :last_name, class:"form-control", id: "validationCustom02", required: true %>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-2">
      <label for="validationCustom03">Age</label>
      <%= form.text_field :age, class:"form-control", id: "validationCustom03", required: true %>
    </div>
    <div class="form-group col-md-3">
      <label for="inputState">Education</label>
        <%= form.select :education, options_for_select(["High School", "Freshman", "Sophomore", "Junior","Senior"]), { prompt: "Select One", required: true }, { class: "form-control", id: "inputState" } %>
    </div>
  </div>
    <%= form.submit "Update", class: "btn btn-primary" %>
  <% end %>
  </div>  
