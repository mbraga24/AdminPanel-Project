<h1 class="center-title">Students</h1>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Student</th>
      <th scope="col">Email</th>
      <th scope="col">Cohort</th>
      <th scope="col">Education</th>
      <th scope="col">Age</th>
      <th scope="col">Created</th>
      <th scope="col">Updated</th>
      <th scope="col">Edit</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
  <% @students.each do |student|  %>
    <tr id="student<%= student.id %>">
      <th scope="row"><%= student.id %></th>
      <td><%= student.first_name %> <%= student.last_name %></td>
      <td><%= student.email %></td>
      <td><%= student.cohort_id %></td>
      <td><%= student.education %></td>
      <td><%= student.age       %></td>
      <td><%= student.created_at.to_date %></td>
      <td><%= student.updated_at.to_date %></td>
      <td>
        <button type="button" class="btn btn-default btn-sm">
          <a href="<%= edit_student_path(student) %>">
            <span class="glyphicon glyphicon-pencil"></span> 
        </button>
      </td>
      <td>
        <button type="button" class="btn btn-default btn-sm">
          <%= link_to(student_path(student.id), method: :delete, remote: :true) do %>
            <span class="glyphicon glyphicon-trash"></span>
          <% end %>
        </button>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
<div class="col-md-12 text-center"> 
    <button type="button" class="btn btn-warning btn-lg">
      <a href="<%= new_student_path %>">Create a Student</a>
    </button> 
</div>


