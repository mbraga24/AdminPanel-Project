<% @students_cohort=StudentsCohort.new %>
<% puts @students.to_s%>
<%= form_with model: @students_cohort do |form| %>
  <%= form.select(:students_id, options_for_select(@students), 
          { prompt: 'Add Students'}
          ) %>
  <%= form.hidden_field :cohort_id, value: @cohort.id %>
  <%= form.submit%>
<% end %>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">First</th>
      <th scope="col">Last</th>
      <th scope="col">Age</th>
    </tr>
  </thead>
  <tbody>
      <% @students_in_cohort.each do |students_cohort| %>
        <% student=Student.find(students_cohort.student_id) %>
      <tr>
        <th scope="row"><%= student.id %></th>
        <td><%= student.first_name %></td>
        <td><%= student.last_name  %></td>
        <td><%= student.age        %></td>
      </tr>
      <% end %>
  </tbody>
</table>