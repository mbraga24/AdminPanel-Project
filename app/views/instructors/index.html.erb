<h1 class="center-title">Instructors</h1>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Instructor</th>
      <th scope="col">Cohort Assc.</th>
      <th scope="col">Education</th>
      <th scope="col">Age</th>
      <th scope="col">Salary</th>
      <th scope="col">Created</th>
      <th scope="col">Updated</th>
      <th scope="col">Edit</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
  <% @instructors.each do |instructor|  %>
    <tr id="instructor<%= instructor.id %>">
      <th scope="row"><%= instructor.id %></th>
      <td><%= instructor.first_name %> <%= instructor.last_name %></td>
      <td><%= instructor.cohort_id  %></td>
      <td><%= instructor.education  %></td>
      <td><%= instructor.age        %></td>
      <td><%= instructor.salary     %></td>
      <td><%= instructor.created_at.to_date %></td>
      <td><%= instructor.updated_at.to_date %></td>
      <td>
        <button type="button" class="btn btn-default btn-sm">
          <a href="<%= edit_instructor_path(instructor) %>"><span class="glyphicon glyphicon-pencil"></span></a>
        </button>
      </td>
      <td>
        <button type="button" class="btn btn-default btn-sm">
          <%= link_to(instructor_path(id: instructor.id), method: :delete, remote: true) do %>
            <span class="glyphicon glyphicon-trash"></span> 
          <% end %>
        </button>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<div class="col-md-12 text-center"> 
    <button type="button" class="btn btn-warning btn-lg">
      <a href="<%= new_instructor_path %>">Create a Instructor</a>
    </button> 
</div>

