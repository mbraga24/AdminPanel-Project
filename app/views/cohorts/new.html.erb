<h1>Cohorts</h1>

<%= form_with(model: @cohort) do |form| %>
  <div class="form-row">
    <div class="form-group col-md-3">
      <label for="inputState">Course Name</label>
        <%= form.collection_select :course_id, Course.all, :id, :name, { prompt: "Select One", required: true }, { class: "form-control", id: "inputState" } %>
    </div>
    <div class="form-group col-md-2">
      <label for="validationCustom01">Class Size</label>
      <%= form.text_field :class_size, class:"form-control", id: "validationCustom01", required: true, placeholder: "Class Size" %>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-3">
      <label for="validationCustom02">Start Date</label>
      <%= form.text_field :start_date, class:"form-control", id: "validationCustom02", required: true, placeholder: "Start Date" %>
    </div>
    <div class="form-group col-md-3">
      <label for="validationCustom03">End Date</label>
      <%= form.text_field :end_date, class:"form-control", id: "validationCustom03", required: true, placeholder: "End Date" %>
    </div>
  </div>

    <%= form.submit "Create", class: "btn btn-primary" %>
  
  </div>  
  <% end %>
</form>

