<h1>Instructors</h1>

 <%= form_with(model: @instructor) do |form| %>
  <div class="form-row">
    <div class="form-group col-md-3">
      <label for="validationCustom01">First Name</label>
      <%= form.text_field :first_name, class:"form-control", id: "validationCustom01", required: true, placeholder: "First Name" %>
    </div>
    <div class="form-group col-md-3">
      <label for="validationCustom02">Last Name</label>
      <%= form.text_field :last_name, class:"form-control", id: "validationCustom02", required: true, placeholder: "Last Name" %>
    </div>
    <div class="form-group col-md-1">
      <label for="validationCustom03">Age</label>
       <%= form.text_field :age, class:"form-control", id: "validationCustom03", required: true, placeholder: "Age" %>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-3">
      <label for="inputState">Education</label>
      <%= form.select :education, options_for_select(["B.S", "B.A", "T.A", "MASTER", "P.H.D"]), { prompt: "Select One", required: true }, { class: "form-control", id: "inputState" } %>
    </div>
    <div class="form-group col-md-2">
      <label for="inputEmail4">Salary</label>
      <%= form.text_field :salary, class:"form-control", id: "validationCustom04", required: true, placeholder: "Salary" %>
    </div>
    <div class="form-group col-md-3">
      <label for="inputState">Cohort</label>
        <%= form.collection_select :cohort_id, Cohort.all, :id, :id, { prompt: "Select One", required: true }, { class: "form-control", id: "inputState" } %>
    </div>
  </div>
    <%= form.submit "Create", class: "btn btn-primary" %> 
  
  <% end %>
</form>

